{
  "compilerOptions": {
    "target": "esnext",             
    "module": "esnext",             
    "strict": true,                 
    "moduleResolution": "node",     
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,        
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",                 
    "paths": {                      
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
